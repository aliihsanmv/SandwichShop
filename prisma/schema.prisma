datasource db {
    provider = "mysql"
    url = "mysql://admin:1234@localhost:3306/sandwitch"
}

generator client {
  provider = "prisma-client-js"
}

model MenuItem {
    id Int @id @default(autoincrement())
    name String
    description String
    price Decimal
    photoUrl String
    cartItems CartItem[]
}

model Cart {
  id Int @id @default(autoincrement())
  cartItems CartItem[]
  createdAt DateTime
}

model CartItem {
  id Int @id @default(autoincrement())
  cart Cart @relation(fields: [cartId], references: [id])
  cartId Int
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId Int
  quantity Int
  price Decimal
}
